{
  "compilerOptions": {
    /* Target & Module */
    "target": "ES6",                          
    "module": "commonjs",

    /* Paths */
    "rootDir": "src",
    "outDir": "dist",

    /* Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,

    /* Source Maps (optional but useful for debugging) */
    "sourceMap": true,

    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
